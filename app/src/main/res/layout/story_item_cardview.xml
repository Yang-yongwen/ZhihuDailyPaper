<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/story_item_card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    app:cardCornerRadius="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/story_item_card_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/story_item_title"
            android:layout_marginRight="10dp"
            android:maxLines="3"
            android:textSize="18sp"
            android:text=""
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="match_parent" />

        <com.yangyongwen.zhihudailypaper.ui.AspectRatioView
            android:id="@+id/story_item_icon_container"
            android:layout_weight="1"
            app:aspectRatio="1.1"
            android:layout_width="45dp"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/story_item_icon"
                android:scaleType="fitXY"
                android:src="@drawable/test_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.yangyongwen.zhihudailypaper.ui.AspectRatioView>


    </LinearLayout>

</android.support.v7.widget.CardView>